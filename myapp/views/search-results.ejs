<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/products/logo-rare.png" />
	
	<title>R. Beauty Products</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	
	<!-- /Header -->


<%- include('./partials/header')%>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>

			<% if (mensaje != undefined) { %>
				
				<div >
					<%= mensaje %>
				</div>
			 <% } %>

			 <% if (productos.length > 0) { %>

				<% for( let i = 0; i < productos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= productos[i].nombreArchivoImagen %>" alt="Imagen del producto">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombreProducto %></h2>
								<p><%= productos[i].descripcionProducto %></p>
								<% if (productos[i].comentarios) { %>
									<p>Comentarios: <%= productos[i].comentarios.length %></p>
								<% } else { %>
									<p>Comentarios: 0</p>
								<% } %>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			  
			 <% } %>
			 <!-- Show the "ultimos" products -->
			


<%- include('./partials/footer') %>
</body>

</html>