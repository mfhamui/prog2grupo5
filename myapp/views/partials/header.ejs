<header class="main-header">
    <p class="titulo">R. Beauty Products</p>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 col-md-2">
                <a href="/products" class="main-header_home-link">
                    <img src="/images/products/logo-rare.png" class="logo">
                </a>
            </div>

            <div class="col-7 col-md-6">
                <form action="/products/search-results"method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Buscar productos, marcas y más"
                        class="search-form_input">
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="col-12 col-md-4">
                <a class="main-header_credit-link">
                    <i class="fas fa-hand-holding-usd"></i>
                    Todas las opiniones en un solo lugar.
                </a>
            </div>
        </div>

        <button class="btn-toggle-navbar">
            <i class="fas fa-bars"></i>
        </button>

        <nav class="main-navbar">
            <ul class="left-navbar">
                <a href="/products/">Todos los productos</a>
            </ul>

            
                <%if(user != undefined) {%>
                <p class="saludo" >Hola <%= user.nombreUsuario %> ! ¿Cómo estas?</p>
                <ul class="right-navbar">
                <li><a href="/users/profile/<%= user.id %>">  Mi perfil <i class="fas fa-user"></i> </a></li>
                <li><a href="/users/profile/logout" class="logout">Cerrar sesión</a></li>
                <li><a href="/products/product-add">Cargar productos</a></li> 
                </ul>
                <% } else { %>
                    <ul class="right-navbar">
                    <li>
                        <a href="/users/register">Creá tu cuenta <i class="far fa-address-card"></i> </a>
                    </li>
                    <li>
                        <a href="/users/login">Ingresá <i class="fas fa-sign-in-alt"></i></a>
                    </li>
                    </ul>
                <%}%>
                
                
            </ul>
        </nav>
    </div>
</header>