<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/products/logo-rare.png" />

	<title>R. Beauty Products</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>


		<!-- product detail -->
		<div class="container products-wrapper">
			<div class="d-flex align-items-center">
				<h2 class="products-title">
					<%= producto.nombreProducto%>
				</h2>
				<%if(user !=undefined) {%>
					<p class="product-detail-description">
						<a href="/products/product-add">Editar</a>
					</p>
				<% } %>

			</div>
			<div class="product-detail">
				<div class="row">
					<article class="col-12 col-lg-8 product-detail-info">
						<img src=<%=producto.nombreArchivoImagen%> alt="" class="product-detail-img">
						<p class="product-detail-description">
							<%=producto.descripcionProducto %>
						</p>
					</article>
					<div class="col-12 col-lg-4">
						<section class="comments">
							<% for( let i=0; i < producto.comentarios.length; i++ ) { %>
								<article>
									<img src="<%= producto.comentarios[i].usuario.foto %>" alt="Foto de usuario">
									<div class="data">
										<p class="user">
											<strong>
												<a href="/products/profile/<%= producto.comentarios[i].usuario.id %>">
													<%= producto.comentarios[i].usuario.nombreUsuario %>:
												</a>
											</strong>
											<%= producto.comentarios[i].comentario %>

									</div>
								</article>
								<% } %>
						</section>
						<form class="form" action="/products/product/<%= producto.id %>/comment" method="POST">
							<input class="form-input" type="text" name="comentario" value=""
								placeholder="Agregar comentario">
							<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
						</form>
						<hr>
					</div>
				</div>
			</div>
		</div>
		<!-- /product detail -->

		<%- include('./partials/footer') %>
</body>

</html>