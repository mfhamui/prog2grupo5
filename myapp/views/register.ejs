<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
<%- include('./partials/header') %>

	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12"> 
				<form action="/products/login" method="GET">
					<h2 class="products-title">Registrate</h2>
					<div>
						<label for="email">Correo electrónico:</label>
						<input type="email" id="email" name="email" required>
					</div>

					<div>
						<label for="name">Usuario:</label>
						<input type="text" id="name" name="name" required>
					</div>
							
					<div>
						<label for="password">Contraseña:</label>
						<input type="password" id="password" name="password" required>
					</div>

					<div>
						<label for="fechaNacimiento">Fecha de nacimiento:</label>
						<input type="date" id="fechaNacimiento" name="fechaNacimiento">
					</div>
				  
					<div>
						<label for="documento">Nro de documento:</label>
						<input type="number" id="documento" name="documento">
					</div>

					<div>
						<label for="foto">Foto de perfil:</label>
  						<input type="text" id="foto" name="foto"><br>

					</div>
					<div>
						<button type="submit">Registrarme</button>
					</div>
				</form>
				
			</div>


			<%- include('./partials/footer') %>
</body>

</html>